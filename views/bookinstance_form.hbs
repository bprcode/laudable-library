{{! This template populates catalog-layout.hbs }}
{{#> catalog_layout use_script='/form-eraser.js' no_title=1}}{{#*inline 'content'~}}
<div class="card">
    <div class="card-header mb-3"><h1 class="fs-3">{{title}}</h1></div>

    <div class="container col-md-10">
        <form class="mb-4" action="{{form_action}}" method="POST">
            
            <div class="row mb-3">
                <label for="title-id" class="col-form-label col-sm-3">Title</label>
                <div class="col input-group-has-validation">
                    <select class="form-select {{#if (error-check trouble 'book_id')}}is-invalid{{/if}}" name="book_id" id="title-id">
                        <option value="default">Select title...</option>
                        {{#each bookList}}<option value="{{book_id}}" {{#if (match-string book_id ../populate.book_id)}}selected{{/if}}>{{title}}</option>{{/each}}
                    </select>
                    <div class="invalid-feedback">{{error-check trouble 'book_id'}}</div>
                </div>
            </div>

            <div class="row mb-3">
                <label for="imprint-id" class="col-form-label col-sm-3">Imprint</label>
                <div class="col input-group-has-validation">
                    <input class="form-control {{#if (error-check trouble 'imprint')}}is-invalid{{/if}}" id="imprint-id" name="imprint" type="text" value="{{populate.imprint}}">
                    <div class="invalid-feedback">{{error-check trouble 'imprint'}}</div>
                </div>
            </div>

            <div class="row mb-3">
                <label for="due-id" class="col-form-label col-sm-3">Due back</label>
                <div class="col input-group-has-validation">
                    <input class="form-control {{#if (error-check trouble 'due_back')}}is-invalid{{/if}}" id="due-id" name="due_back" type="date" value="{{populate.due_back}}">
                    <div class="invalid-feedback">{{error-check trouble 'due_back'}}</div>
                </div>
            </div>

            <div class="row mb-3">
                <label for="status-id" class="col-form-label col-sm-3">Status</label>
                <div class="col input-group-has-validation">
                    <select class="form-select {{#if (error-check trouble 'status')}}is-invalid{{/if}}" name="status" id="status-id">
                        <option value="default">Select status...</option>
                        {{#each statusList}}<option value="{{.}}" {{#if (match-string . ../populate.status)}}selected{{/if}}>{{.}}</option>{{/each}}
                    </select>
                    <div class="invalid-feedback">{{error-check trouble 'status'}}</div>
                </div>
            </div>

            <div class="d-flex justify-content-end">
            <button class="btn btn-primary fw-semibold" type="submit">{{submit}}</button>
            </div>
        </form>
    </div>
</div>
{{~/inline}}{{/catalog_layout}}
