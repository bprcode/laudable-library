{{! This template populates catalog-layout.hbs }}
{{#> catalog_layout no_title=1}}{{#*inline 'content'~}}
<script defer src="/import.js"></script>
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between">
        <span>
        <h1 class="serif h2 fw-semibold">Placeholder Title</h1>
        </span>
        <span class="">
            <a class="btn ui-button" href="#"><img src="/pencil-fill.svg" alt="Pencil icon click to edit"></a>
            <a class="btn ui-button" href="#"><img src="/trash.svg" alt="Trash icon click to delete"></a>
        </span>
    </div>
    <div class="card-body">
        <div class="col-6">
            <form class="input-group">
                <input type="text" class="form-control" id="search-text">
                <button class="btn btn-primary" id="search-button">
                    <span class="spinner-border spinner-border-sm visually-hidden" id="search-spinner" role="status" aria-hidden="true"></span> Search
                </button>
            </form>
        </div>
    </div>
</div>


<div class="card">
    <div class="card-header" id="list-header">
        Secondary placeholder header:
    </div>
    <ul class="list-group list-group-flush" id="list-root">
        <li class="list-group-item">
            Example item
        </li>
    </ul>
</div>

{{~/inline}}{{/catalog_layout}}
